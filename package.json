{
  "name": "finalyear-project",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "finalyear-frontend",
    "finalyear-backend"
  ],
  "scripts": {
    "start": "cd finalyear-backend && npm start",
    "dev": "cd finalyear-frontend && npm run dev",
    "build": "cd finalyear-frontend && npm run build",
    "install:all": "npm install && cd finalyear-frontend && npm install && cd ../finalyear-backend && npm install"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
